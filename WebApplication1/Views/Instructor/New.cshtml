@model InstructorWithDeptAndCourseViewModel
@{
    ViewData["Title"] = "New";
}

<h1>New</h1>

<form action="/Instructor/SaveNew" enctype="multipart/form-data" method="Post">
    <label>Name</label>
    <input name="Name" id="Name" value="@Model?.Name" class="form form-control"/>
    <div class="form-group mt-3">
        <lable asp-for="UploadPhoto" class="control-label"></lable>

        <div class="custom-file">
            <input asp-for="UploadPhoto" type="file" class="custom-file-input" id="validatedCustomFile">
            <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
        </div>
    </div>
   
     <input name="ImgURL" id="ImgURL" value="@Model?.ImgURL" class="form form-control" />
     <lable>Address</lable>
    <input name="Address" id="Address" value="@Model?.Address" class="form form-control" />
    <lable>Salary</lable>
    <input name="Salary" id="Salary" value="@Model?.Salary" class="form form-control" />
    <lable>department</lable>
@*     <input name="dept_id" id="dept_id" value="@Model?.dept_id" class="form form-control" />*@

    <select name="dept_id" id="dept_id" value="@Model?.dept_id" class="form form-control">
        if (@Model?.Departments != NULL)
        {
            @foreach (var deptItem in Model?.Departments)
            {
                if (Model.dept_id == deptItem.Id)
                {
                    <option value="@deptItem.Id" selected>@deptItem.Name</option>
                }
                else
                {
                    <option value="@deptItem.Id">@deptItem.Name</option>

                }
            }
        }
       
    </select>
    <lable>Crs_id</lable>
@*     <input name="Crs_id" id="Crs_id" value="@Model?.Crs_id" class="form form-control" /> *@
    <select name="Crs_id" id="Crs_id" value="@Model?.Crs_id" class="form form-control">
        @foreach (var CrsItem in Model.Courses)
        {
            <option value="@CrsItem.Id">@CrsItem.Name</option>
        }
    </select>
    <input type="submit" value="Create" class="btn btn-dark"/>

</form>

<a href="/Instructor/ShowAll">Back To List</a>